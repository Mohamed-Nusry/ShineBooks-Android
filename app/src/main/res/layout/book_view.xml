<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#DDDDDD"
        >


        <ImageView android:id="@+id/bImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_book_black_24dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="3"/>

        <TextView android:id="@+id/bName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:textColor="#FF5722"
            android:text="NA"
            android:padding="1dp"
            android:layout_row="1"
            android:layout_column="1"/>



        <TextView android:id="@+id/bPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:padding="1dp"
            android:textSize="10sp"
            android:textColor="#4B4848"
            android:text="NA"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView android:id="@+id/bAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="1dp"
            android:textSize="10sp"
            android:textColor="#4B4848"
            android:text="NA"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView android:id="@+id/bISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="1dp"
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:text="NA"
            android:layout_row="1"
            android:layout_column="1"/>

        <Button
            android:id="@+id/btndet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:layout_marginTop="80dp"

            android:layout_row="1"
            android:layout_column="1"
            />







    </GridLayout>




</android.support.v7.widget.CardView>